{% extends 'base.html.twig' %}

{% block title %}{{ 'title.users'|trans }}{% endblock %}

{% block main %}
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-md-flex align-items-center">
                    <div>
                        <h1 class="card-title font-medium p-0">{{ 'title.users'|trans }}</h1>
                    </div>

                    <div class="ms-auto d-flex align-items-center">
                        <div class="dl">
                            <a href="{{ path('admin_user_new') }}" class="btn btn-sm btn-block btn-success">
                                <i class="fa fa-plus" aria-hidden="true"></i> {{ 'user.label.new_user'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="users" class="table table-striped table-middle-aligned">
                        <thead>
                        <tr>
                            <th>{{ 'user.label.username' | trans }}</th>
                            <th>{{ 'user.label.fullname' | trans }}</th>
                            <th>{{ 'user.label.email' | trans }}</th>
                            <th>{{ 'user.label.actions' | trans }}</th>
                        </tr>
                        <tr>
                            <th class="search-column"><input type="search" class="form-control form-control-sm" placeholder="{{ 'user.label.username'|trans }}" /></th>
                            <th class="search-column"><input type="search" class="form-control form-control-sm" placeholder="{{ 'user.label.fullname'|trans }}" /></th>
                            <th class="search-column"><input type="search" class="form-control form-control-sm" placeholder="{{ 'user.label.email'|trans }}" /></th>
                            <th class="search-column"></th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>

        $(function () {

            $('#users input[type=search]').click(function(e){
                table.draw();
            });

            $('#users thead tr:eq(1) th').each( function (i) {
                $( 'input', this ).on( 'keyup change', function (e) {
                    e.stopPropagation();

                    if ( typeof t != 'undefined' ) {
                        clearTimeout(t);
                    }

                    var $val = this.value;

                    if ( table.column(i).search() !== $val ) {
                        t = setTimeout(function(){
                            table
                                .column(i)
                                .search( $val )
                                .draw()
                        }, 500)
                    }
                } );
            } );

            var table = $('#users').DataTable({
                orderCellsTop: true,
                autoWidth: false,
                serverSide: true,
                ajax: {
                    url: '{{ path('admin_user_table_index') }}',
                    type: 'post',
                    data: {}
                },
                columns: [
                    {data: 'username', name: 'username'},
                    {data: 'fullname', name: 'fullname'},
                    {data: 'email', name: 'email'},
                    {data: 'actions', name: 'actions', searchable: false, sortable: false}
                ],
                order: [[0, "asc"]],
                searchDelay: 500,
                language: {
                    paginate: {
                        previous: '{{ 'datatables.previous'|trans({}, 'datatables') }}',
                        next: '{{ 'datatables.next'|trans({}, 'datatables') }}',
                        last: '{{ 'datatables.last'|trans({}, 'datatables') }}',
                        first: '{{ 'datatables.first'|trans({}, 'datatables') }}'
                    },
                    processing: '{{ 'datatables.processing'|trans({}, 'datatables') }}',
                    search: '{{ 'datatables.search'|trans({}, 'datatables') }}',
                    emptyTable: '{{ 'datatables.empty_table'|trans({}, 'datatables') }}',
                    zeroRecords: '{{ 'datatables.empty_table'|trans({}, 'datatables') }}',
                    loadingRecords: '{{ 'datatables.loading_records'|trans({}, 'datatables') }}',
                    info: '{{ 'datatables.info'|trans({}, 'datatables') }}',
                    infoEmpty: '{{ 'datatables.info_empty'|trans({}, 'datatables') }}',
                    infoFiltered: '{{ 'datatables.info_filtered'|trans({}, 'datatables') }}',
                    lengthMenu: '{{ 'datatables.length_menu'|trans({}, 'datatables') }}'
                }
            });
        });

    </script>



{% endblock %}
