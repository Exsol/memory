{% extends 'base.html.twig' %}

{% block body_id 'admin_user_edit' %}

{% block main %}

    <div class="col">
        <div class="card">
            <div class="card-body">

                <h1 class="card-title font-medium p-0">{{ 'title.user_edit'|trans }}</h1>

                {{ form_start(form) }}

                <div class="row mt-4">
                    <div class="col-12">
                        <h4>{{ 'title.personal_data'|trans }}</h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.role) }}
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <h4>{{ 'title.login_data'|trans }}</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_row(form.newPassword) }}
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_user'|trans }}
                    </button>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-link">
                        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_overview'|trans }}
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block sidebar %}
{% endblock %}
