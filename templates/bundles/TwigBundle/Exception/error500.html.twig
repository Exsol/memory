{% extends 'frontend/base.html.twig' %}

{% block body_id 'error' %}

{% block main %}
    <div class="card">
        <div class="card-body">
            <h1 class="text-danger"><i class="fa fa-unlock-alt"
                                       aria-hidden="true"></i> {{ 'http_error.name'|trans({ '%status_code%': 500 }) }}
            </h1>
            <div class="row">
                <p class="lead">
                    {{ 'http_error_500.description'|trans }}
                </p>
                <p class="lead">
                    {{ 'http_error_500.suggestion'|trans({ '%url%': path('admin_index') })|raw }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {# show_source_code(_self) #}
{% endblock %}
